    name = "meia-lua",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "go_default_test",
    srcs = [
        "ast_builder_test.go",
        "type_checker_test.go",
    ],
    embed = [":go_default_library"],
    deps = [
        "//meia-lua/antlr:parser",
        "@com_github_antlr_antlr4//runtime/Go/antlr:go_default_library",
    ],
